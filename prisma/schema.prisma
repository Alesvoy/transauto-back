// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  driver      Driver?
  maintenance Maintenance[]
  trip        Trip[]
}

model Driver {
  id          Int           @id @default(autoincrement())
  unitId      Int           @unique
  name        String        @unique
  unit        Unit          @relation(fields: [unitId], references: [id])
  maintenance Maintenance[]
  trip        Trip[]
}

model Maintenance {
  id        Int      @id @default(autoincrement())
  unitId    Int      @unique
  driverId  Int      @unique
  date      DateTime @default(now())
  mileage   Int
  maintType String
  cost      Float
  notes     String?
  unit      Unit     @relation(fields: [unitId], references: [id])
  driver    Driver   @relation(fields: [driverId], references: [id])
}

model Trip {
  id       Int      @id @default(autoincrement())
  unitId   Int      @unique
  driverId Int      @unique
  date     DateTime @default(now())
  tripType String
  notes    String?
  unit     Unit     @relation(fields: [unitId], references: [id])
  driver   Driver   @relation(fields: [driverId], references: [id])
}
